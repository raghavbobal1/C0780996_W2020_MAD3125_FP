<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".AddNewBillActivity">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="251dp"
            android:layout_height="58dp"
            android:layout_marginTop="48dp"
            android:text=" Enter New Bill Details"
            android:textColor="#F34280"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/coiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="88dp"
            android:text="Select Bill Type-"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:fontFamily="@font/noto_sans_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Spinner
            android:id="@+id/spinnerBillType"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginTop="88dp"
            android:background="#F34280"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.088"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editBillId"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#F34280"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/spinnerBillType"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/spinnerBillType">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBillIdtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F34280"
                android:hint="Enter Bill Id" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editUnitsUsed"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="#000000"
            app:hintTextColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editAgencyName"
            app:layout_constraintStart_toStartOf="@+id/editAgencyName"
            app:layout_constraintTop_toBottomOf="@+id/editAgencyName">>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editUnitsUsedtext"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#F34280"
                android:hint="Enter Units Used"
                android:textColorHint="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editAgencyName"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#000000"
            app:hintTextColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editBillDate"
            app:layout_constraintStart_toStartOf="@+id/editBillDate"
            app:layout_constraintTop_toBottomOf="@+id/editBillDate">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editAgencyNameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F34280"
                android:hint="Enter Agency Name"
                android:textColorHint="#000000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editBillDate"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editBillId"
            app:layout_constraintHorizontal_bias="0.342"
            app:layout_constraintStart_toStartOf="@+id/editBillId"
            app:layout_constraintTop_toBottomOf="@+id/editBillId">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBillDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Bill Date" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editPhoneNumber"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:hint="Enter Phone Number"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editBillDate"
            app:layout_constraintStart_toStartOf="@+id/editBillDate"
            app:layout_constraintTop_toBottomOf="@+id/editBillDate">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPhoneNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editDataUsed"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editPhoneNumber"
            app:layout_constraintStart_toStartOf="@+id/editPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/editPhoneNumber">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDataUsedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Data Used"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editManufacturerName"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editDataUsed"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/editDataUsed"
            app:layout_constraintTop_toBottomOf="@+id/editDataUsed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editManufacturerNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Manufacturer Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editPlanName"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#000000"
            app:hintTextColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editManufacturerName"
            app:layout_constraintStart_toStartOf="@+id/editManufacturerName"
            app:layout_constraintTop_toBottomOf="@+id/editManufacturerName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPlanNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Plan Name"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editMinsUsed"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/editPlanName"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/editPlanName"
            app:layout_constraintTop_toBottomOf="@+id/editPlanName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editMinsUsedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Mins Used" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonAddBill"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginTop="72dp"
            android:background="#F34280"
            android:text="ADD BILL"
            android:textColor="#000000"
            app:backgroundTint="#F34280"
            app:layout_constraintEnd_toEndOf="@+id/editMinsUsed"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="@+id/editMinsUsed"
            app:layout_constraintTop_toBottomOf="@+id/editMinsUsed" />

        <Button
            android:id="@+id/buttonClearFields"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:text="@string/clear_fields"
            android:textColor="#F34280"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/buttonAddBill"
            app:layout_constraintStart_toStartOf="@+id/buttonAddBill"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddBill" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>