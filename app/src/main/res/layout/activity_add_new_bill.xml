<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".AddNewBillActivity">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="251dp"
            android:layout_height="58dp"
            android:layout_marginTop="44dp"
            android:text=" Enter New Bill Details"
            android:textColor="#F34280"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/coiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="128dp"
            android:text="Select Bill Type-"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:fontFamily="@font/noto_sans_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinnerBillType"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginTop="128dp"
            android:background="#F34280"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editBillId"
            android:layout_width="323dp"
            android:layout_height="63dp"
            android:background="#F34280"
            android:textColorHint="#FDFCFD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/spinnerBillType"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/spinnerBillType"
            app:layout_constraintVertical_bias="0.021">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBillIdtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F34280"
                android:hint="Enter Bill Id" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editUnitsUsed"
            android:layout_width="321dp"
            android:layout_height="81dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:hint="Enter Units Used"
            android:textColorHint="#F34280"
            app:hintTextColor="#F34280"
            app:layout_constraintEnd_toEndOf="@+id/editPhoneNumber"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/editPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/editPhoneNumber">>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editUnitsUsedtext"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#F34280"
                android:hint="Enter Units Used"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editAgencyName"
            android:layout_width="323dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#FFFFFF"
            app:hintTextColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/editUnitsUsed"
            app:layout_constraintTop_toBottomOf="@+id/editUnitsUsed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editAgencyNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Agency Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editPhoneNumber"
            android:layout_width="324dp"
            android:layout_height="69dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:hint="Enter Phone Number"
            android:textColorHint="#FFFFFF"
            app:hintTextColor="#F34280"
            app:layout_constraintEnd_toEndOf="@+id/editBillId"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/editBillId"
            app:layout_constraintTop_toBottomOf="@+id/editBillId">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPhoneNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="hint"
                android:textColorHint="#F34280" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editDataUsed"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/editAgencyName"
            app:layout_constraintStart_toStartOf="@+id/editAgencyName"
            app:layout_constraintTop_toBottomOf="@+id/editAgencyName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDataUsedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Data Used"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editManufacturerName"
            android:layout_width="322dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/editDataUsed"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/editDataUsed"
            app:layout_constraintTop_toBottomOf="@+id/editDataUsed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editManufacturerNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Manufacturer Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="45dp"
            android:layout_height="1500dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editPlanName"
            android:layout_width="324dp"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#FFFFFF"
            app:hintTextColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/editManufacturerName"
            app:layout_constraintStart_toStartOf="@+id/editManufacturerName"
            app:layout_constraintTop_toBottomOf="@+id/editManufacturerName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPlanNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Plan Name"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editBillDate"
            android:layout_width="328dp"
            android:layout_height="64dp"
            android:background="#000000"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/editPlanName"
            app:layout_constraintStart_toStartOf="@+id/editPlanName"
            app:layout_constraintTop_toBottomOf="@+id/editPlanName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBillDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F34280"
                android:hint="Enter Bill Date" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editMinsUsed"
            android:layout_width="329dp"
            android:layout_height="61dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/editBillDate"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editBillDate"
            app:layout_constraintTop_toBottomOf="@+id/editBillDate">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editMinsUsedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:hint="Enter Mins Used"
                android:textColorHint="#F34280" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonAddBill"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginTop="124dp"
            android:background="#F34280"
            android:text="ADD"
            app:backgroundTint="#F34280"
            app:layout_constraintEnd_toEndOf="@+id/editMinsUsed"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/editBillDate" />

        <Button
            android:id="@+id/buttonClearFields"
            android:layout_width="317dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:text="@string/clear_fields"
            android:textColor="#F34280"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/buttonAddBill"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="@+id/buttonAddBill"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddBill" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>